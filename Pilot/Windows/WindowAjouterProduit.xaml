<Window
    x:Class="Pilot.Windows.WindowAjouterProduit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Pilot.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WindowAjouterProduit"
    Width="300"
    Height="500"
    mc:Ignorable="d">
    <StackPanel Margin="20">
        <Label Content="Reference" />
        <TextBox Text="{Binding CodeProduit, ValidatesOnExceptions=True}" TextWrapping="Wrap" />
        <Label Content="Nom" />
        <TextBox Text="{Binding NomProduit, ValidatesOnExceptions=True}" TextWrapping="Wrap" />
        <Label Content="Prix" />
        <TextBox Text="{Binding PrixVente, ValidatesOnExceptions=True}" TextWrapping="Wrap" />
        <Label Content="Quantité" />
        <TextBox Text="{Binding QuantiteStock, ValidatesOnExceptions=True}" TextWrapping="Wrap" />
        <Label Content="Type" />
        <ComboBox x:Name="comboType" DisplayMemberPath="LibelleType"/>
        <Label Content="Type de pointe" />
        <ComboBox x:Name="comboPointe" DisplayMemberPath="LibelleTypePointe"/>
        <Label Content="Couleur" />
        <TextBox Text="" TextWrapping="Wrap" />
        <CheckBox Content="Disponible" IsChecked="{Binding Disponible, ValidatesOnExceptions=True}"/>
        <Button Content="Valider"  Margin="0,20,0,0" Background="#FF005CA9" Foreground="White" BorderBrush="White"/>
        
    </StackPanel>
</Window>
