<Window
    x:Class="Pilot.Windows.WindowAjouterProduit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Pilot.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WindowAjouterProduit"
    Width="300"
    Height="380"
    mc:Ignorable="d">
    <StackPanel Margin="20">
        <Label Content="Reference" />
        <TextBox Text="{Binding codeProduit, ValidatesOnExceptions=True}" TextWrapping="Wrap" />
        <Label Content="Nom" />
        <TextBox Text="" TextWrapping="Wrap" />
        <Label Content="Catégorie" />
        <ComboBox>
            <ComboBoxItem Content="Commercial" />
            <ComboBoxItem Content="Responsable production" />
        </ComboBox>
        <Label Content="Type" />
        <ComboBox>
            <ComboBoxItem Content="Commercial" />
            <ComboBoxItem Content="Responsable production" />
        </ComboBox>
        <Label Content="Type de pointe" />
        <ComboBox>
            <ComboBoxItem Content="Commercial" />
            <ComboBoxItem Content="Responsable production" />
        </ComboBox>
        <Label Content="Couleur" />
        <TextBox Text="" TextWrapping="Wrap" />
        <Button Content="Valider"  Margin="0,20,0,0" Background="#FF005CA9" Foreground="White" BorderBrush="White"/>


    </StackPanel>
</Window>
