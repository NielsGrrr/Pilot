<Window x:Class="Pilot.Windows.WindowCommande"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pilot.Windows"
        mc:Ignorable="d"
        Title="WindowCommande" Height="450" Width="300">
    <StackPanel>
        
    
        <Label Content="Créer une nouvelle commande" Background="#FF005CA9" Foreground="White" FontWeight="DemiBold" HorizontalContentAlignment="Center" Padding="0,10,0,0" Height="35"/>
        <StackPanel Margin="20">
        
            <StackPanel>
                <Label Content="Revendeur*"/>
                <DataGrid Height="100">

                </DataGrid>
                <Button Content="Ajouter un revendeur" Background="#FF005CA9" Foreground="White" Margin="0,5,0,0"/>
            </StackPanel>
            <StackPanel Margin="0,10,0,0">
                <Label Content="Mode de livraison*"/>
                <ComboBox x:Name="comboModeLivraison" DisplayMemberPath="LibelleModeLivraison"/>
            </StackPanel>
            <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                <Label Content="Date de livraison"/>
                <TextBox TextWrapping="Wrap" Text="TextBox" Margin="40,0,0,0"/>
            </StackPanel>
            <Button x:Name="butValiderCommande" Content="Valider la commande" Background="#FF005CA9" Foreground="White" Margin="0,20,0,0" Height="30"/>
        </StackPanel>
    </StackPanel>
</Window>
