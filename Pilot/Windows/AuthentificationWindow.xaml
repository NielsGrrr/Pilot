<Window x:Class="Pilot.Windows.AuthentificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pilot.Windows"
        mc:Ignorable="d"
        Title="AuthentificationWindow" Height="400" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        
        <StackPanel Margin="100,25,100,50">
            <Image x:Name="img"/>
            <Label Content="Nom d'utilisateur" Margin="0,20,0,0"/>
            <TextBox x:Name="txtUtil" TextWrapping="Wrap" Text="stiefvan"/>
            <Label Content="Mot de passe" Margin="0,20,0,0"/>
            <PasswordBox x:Name="txtMdp" Password="dGAxKU"/>
            <Label x:Name="labMsg" Content="" Foreground="#FFFB0000" Margin="0,10,0,0" FontSize="9"/>
            <Button x:Name="butConnexion" Content="Connexion" Margin="0,10,0,0" Background="#FF005CA9" Foreground="White" BorderBrush="Transparent"
                Click="butConnexion_Click" IsDefault="True" Width="100" Height="20">
            </Button>
        </StackPanel>
        
    </Grid>
</Window>
