<UserControl
    x:Class="Pilot.UC.UserControlConsulterProduit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Pilot.UC"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel>
        <Label
            Height="35"
            Padding="0,10,0,0"
            HorizontalContentAlignment="Center"
            Background="#FF005CA9"
            Content="Modifier des produits"
            FontWeight="DemiBold"
            Foreground="White" />

        <StackPanel Margin="20">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <StackPanel Margin="20,0,20,0">
                    <Label Content="Mot clé" />
                    <TextBox
                        x:Name="tbMotCle"
                        Width="80"
                        Text=""
                        TextChanged="tbMotCle_TextChanged"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Margin="20,0,20,0">
                    <Label Content="Type de pointe" />
                    <TextBox
                        x:Name="tbTypePointe"
                        Width="80"
                        Text=""
                        TextChanged="tbTypePointe_TextChanged"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Margin="20,0,20,0">
                    <Label Content="Type" />
                    <TextBox
                        x:Name="tbType"
                        Width="80"
                        Text=""
                        TextChanged="tbType_TextChanged"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Margin="20,0,20,0">
                    <Label Content="Catégorie" />
                    <TextBox
                        x:Name="tbCategorie"
                        Width="80"
                        Text=""
                        TextChanged="tbCategorie_TextChanged"
                        TextWrapping="Wrap" />
                </StackPanel>

            </StackPanel>
            <DataGrid
                x:Name="dgProduits"
                Height="220"
                Margin="0,20,0,0"
                AutoGenerateColumns="False"
                ItemsSource="{Binding LesProduits}">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FF005CA9" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="Height" Value="30" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding CodeProduit, ValidatesOnExceptions=true}"
                        Header="Code" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding LaPointe.LibelleTypePointe, ValidatesOnExceptions=true}"
                        Header="Pointe" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding LeType.LibelleType, ValidatesOnExceptions=true}"
                        Header="Type" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding LeType.LaCategorie.LibelleCategorie, ValidatesOnExceptions=true}"
                        Header="Categorie" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding PrixVente, ValidatesOnExceptions=true}"
                        Header="Prix" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding QuantiteStock, ValidatesOnExceptions=true}"
                        Header="Quantite" />
                    <DataGridCheckBoxColumn
                        Width="*"
                        Binding="{Binding Disponible, ValidatesOnExceptions=true}"
                        Header="Disponible" />
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    x:Name="butAjouterProduit"
                    Width="30"
                    Height="30"
                    Margin="20,0,0,0"
                    Background="#FF005CA9"
                    Click="butAjouterProduit_Click"
                    Content="&#xE710;"
                    FontFamily="Segoe MDL2 Assets"
                    Foreground="White"
                    ToolTip="Ajouter" />
                <Button
        x:Name="butModifierProduit"
        Width="30"
        Height="30"
        Margin="20,0,20,0"
        Background="#FF005CA9"
        Content="&#xE70F;"
        FontFamily="Segoe MDL2 Assets"
        Foreground="White"
        ToolTip="Modifier" Click="butModifierProduit_Click" />
                <Button
                    x:Name="butSupprimerProduit"
                    Width="30"
                    Height="30"
                    Margin="0,0,20,0"
                    Background="#FF005CA9"
                    Click="butSupprimerProduit_Click"
                    Content="&#xE74D;"
                    FontFamily="Segoe MDL2 Assets"
                    Foreground="White"
                    ToolTip="Supprimer" />
                <Button
                    x:Name="butDetailProduit"
                    Width="30"
                    Height="30"
                    Margin="0,0,20,0"
                    Background="#FF005CA9"
                    Content="&#xE7B3;"
                    FontFamily="Segoe MDL2 Assets"
                    Foreground="White"
                    ToolTip="Supprimer" />
            </StackPanel>
        </StackPanel>
    </StackPanel>

</UserControl>
