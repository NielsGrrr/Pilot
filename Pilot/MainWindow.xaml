<Window
    x:Class="Pilot.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Pilot"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="500"
    mc:Ignorable="d" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Menu DockPanel.Dock="Top" Height="30" Background="#FF005CA9" Foreground="White" >
            <MenuItem x:Name="menuConnexion" HorizontalAlignment="Center" Header="Connexion" Width="100" Height="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" BorderBrush="White"/>
            <MenuItem x:Name="menuAccueil" HorizontalAlignment="Center" Header="Accueil" Width="100" BorderBrush="White"/>
            <MenuItem x:Name="menuCommande" HorizontalAlignment="Center" Header="Commandes" Width="100" BorderBrush="White" Click="menuCommande_Click"/>
            <MenuItem x:Name="menuProduits" HorizontalAlignment="Center" Header="Produits" Width="100" BorderBrush="White" Click="menuProduits_Click"/>
            <MenuItem x:Name="menuRevendeurs" HorizontalAlignment="Center" Header="Revendeurs" Width="100" BorderBrush="White" Click="menuRevendeurs_Click"/>
            <MenuItem x:Name="menuProduit2" HorizontalAlignment="Center" Header="Prduit2" Width="100" BorderBrush="White" Click="menuProduit2_Click"/>
        </Menu>
        <ContentControl x:Name="MainContent" />


    </StackPanel>
</Window>
